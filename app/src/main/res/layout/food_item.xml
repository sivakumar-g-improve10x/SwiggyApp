<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/biriyani_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aasife Biriyani" />

            <TextView
                android:id="@+id/items_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biriyani,Tandhoori chines" />

            <TextView
                android:id="@+id/percentage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#171716"
                android:text="-40%"
                android:textColor="#F8EAEA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rating_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4.5 ⭐"
                android:textColor="#05EC09" />

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30MIN" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>